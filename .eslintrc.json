{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:vue/strongly-recommend",
        "eslint:recommended",
        "@vue/typescript/recommended",
        "prettier"
    ],
    "parser": "vue-eslint-parser",
    "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "vue/no-v-model-argument": "off"
    }
}
